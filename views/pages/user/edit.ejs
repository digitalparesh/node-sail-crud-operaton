<% layout('../../layouts/admin') %>
<% block('title', title); %>

<div class="row">
  <div id="flStackForm" class="col-lg-12 layout-spacing layout-top-spacing">
    <div class="statbox widget box box-shadow">
      <div class="widget-header">
        <div class="row">
          <div class="col-xl-12 col-md-12 col-sm-12 col-12">
            <h4>
              <%= title %>
            </h4>
          </div>
        </div>
      </div>
      <div class="widget-content widget-content-area">
        <form method="post" action="/user/<%= user.id %>">
          <input hidden="_method" value="put">
          <div class="row">
            <div class="col-6">
              <div class="form-group mb-3">
                <label>First name</label>
                <input type="text" class="form-control" id="sEmail" aria-describedby="emailHelp1" placeholder="Enter First Name" name="fname" value="<%= user.fname %>">
              </div>
            </div>
            <div class="col-6">
              <div class="form-group mb-3">
                <label>Last name</label>
                <input type="text" class="form-control" id="sPassword" placeholder="Enter Last Name" name="lname" value="<%= user.lname %>">
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-6">
              <div class="form-group mb-3">
                <label>Email</label>
                <input type="email" class="form-control" id="sEmail" aria-describedby="emailHelp1"  placeholder="Emter Email" name="email" value="<%= user.email %>">
              </div>
            </div>
            <div class="col-6">
              <div class="form-group mb-3">
                <label>Mobile</label>
                <input type="text" class="form-control" id="sPassword" placeholder="Enter Mobile Number" name="mobile" value="<%= user.mobile %>">
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
